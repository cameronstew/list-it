<%= form_for([@list, @email], class: 'form-horizontal') do |f| %>
  <div class="form-group">
    <div class="field row">
      <%= f.label :sender_name,:class => 'control-label col-md-3' %>
      <div class="form-controls col-md-5">
        <%= f.text_field :sender_name, :value => current_user.full_name, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="field row">
      <%= f.label :sender_email,:class => 'control-label col-md-3' %>
      <div class="form-controls col-md-5">
        <%= f.text_field :sender_email, :value => current_user.email, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="field row">
      <%= f.label :recipient_name, :class => 'control-label col-md-3' %>
      <div class="form-controls col-md-5">
        <%= f.text_field :recipient_name, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="field row">
      <%= f.label :recipient_email, :class => 'control-label col-md-3' %>
      <div class="form-controls col-md-5">
        <%= f.text_field :recipient_email, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="field row">
      <%= f.label :message, :class => 'control-label col-md-3' %>
      <div class="form-controls col-md-5">
        <%= f.text_area :message, class: 'form-control' %>
      </div>
    </div>
  </div>
  <hr>
  <div class="form-group send-email-button">
    <%= f.submit "Send Email", class: 'btn btn-primary' %>
  </div>
<% end %>
