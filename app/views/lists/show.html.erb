<div class="page-header">
  <h1>List Details</h1>
</div>

<div class="container">
  <ol class="breadcrumb">
    <li><a href="/lists">All Lists</a></li>
    <li class="active"> <%= @list.name %></li>
  </ol>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <ul class="list">
      <% @list.items.each do |list_item| %>
      <li>
        <%= list_item.quantity %>
        <%= list_item.description %>
      </li>
      <% end %>
    </ul>
    <%= link_to "Edit List", edit_list_path(@list), class: 'btn btn-primary' %>
    <button type="button" class="btn btn-primary email-list" data-toggle="modal" data-target="#myModal">
      Email List
    </button>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Email</h4>
      </div>
      <div class="modal-body">
        <%= render('/emails/new.html.erb') %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
