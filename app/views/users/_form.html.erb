
<%= form_for(@user, class: 'form-horizontal user-form') do |f| %>
<%= render partial: "/shared/errors", locals: {object: @user} %>

    <div class="form-group">
      <div class="field row">
        <%= f.label :first_name, :class => 'control-label col-md-1 col-md-offset-3' %>

        <div class="form-controls col-md-4">
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field row">
        <%= f.label :last_name, :class => 'control-label col-md-1 col-md-offset-3' %>

        <div class="form-controls col-md-4">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field row">
        <%= f.label :email, :class => 'control-label col-md-1 col-md-offset-3' %>

        <div class="form-controls col-md-4">
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group actions">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Back', @user, class: 'btn btn-primary' %>
    </div>
  <% end %>
